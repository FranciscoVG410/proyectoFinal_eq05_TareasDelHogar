<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskDetail">

<LinearLayout
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@color/purple"
        android:paddingTop="26dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Home"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage your family's tasks"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/backgroundtasks"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTituloDetail"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Home"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvDescripcionDetal"
            android:layout_marginHorizontal="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hacer  las actividades por realizar antes de que anochesza"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activity for:"
            android:textColor="@color/black"
            android:layout_marginHorizontal="40dp"/>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chgMembersTaskDetal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleLine="false"
            android:layout_marginHorizontal="40dp"
            app:singleSelection="false"
            android:paddingBottom="12dp"
            />

        <TextView
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="State:"
            android:textColor="@color/black"
            android:layout_marginHorizontal="40dp"/>

        <Button
            android:id="@+id/btnChangeState"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Completada"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/item_completed"
            android:layout_marginHorizontal="40dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnBackHome"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textAllCaps="false"
            android:text="Back"
            android:background="@drawable/contorno"
            android:layout_marginBottom="40dp"
            android:layout_marginHorizontal="40dp"/>

    </LinearLayout>

</LinearLayout>

</ScrollView>